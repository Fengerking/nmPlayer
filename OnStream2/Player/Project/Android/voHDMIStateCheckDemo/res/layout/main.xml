<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/black" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true" >

        <SurfaceView
            android:id="@+id/svMain"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/transparent_background"
            android:layout_centerInParent="true" >
        </SurfaceView>
	</RelativeLayout>
    
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblHDMIIsSupport"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Is support HDMI" />
        
        <TextView
        android:id="@+id/txtHDMIIsSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblHDMIStatus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="HDMI Status" />
        
        <TextView
        android:id="@+id/txtHDMIStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblHDCPIsSupport"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="IS support HDCP" />
        
        <TextView
        android:id="@+id/txtHDCPIsSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblHDCPStatus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="HDCP Enable" />
        
        <TextView
        android:id="@+id/txtHDCPStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" >
        <ListView
            android:id="@+id/lstChangedInfo"
            android:layout_width="fill_parent"
         	android:layout_height="wrap_content" >
        </ListView>
     </LinearLayout>

</LinearLayout>
</RelativeLayout>